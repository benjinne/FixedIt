<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <error-page>
  	<error-code>404</error-code>
  	<location>/error.html</location>
  </error-page>
  <error-page>
  	<error-code>500</error-code>
  	<location>/error.html</location>
  </error-page>
  <error-page>
  	<error-code>505</error-code>
  	<location>/error.html</location>
  </error-page>

  <!-- Servlets -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>fixedIt.servlets.LoginServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>NewUserServlet</servlet-name>
    <servlet-class>fixedIt.servlets.NewUserServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UserInfoServlet</servlet-name>
    <servlet-class>fixedIt.servlets.UserInfoServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>fixedIt.servlets.SearchServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>DisplayScheduleServlet</servlet-name>
    <servlet-class>fixedIt.servlets.DisplayScheduleServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>EditUserInfoServlet</servlet-name>
    <servlet-class>fixedIt.servlets.EditUserInfoServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>PasswordUpdateServlet</servlet-name>
    <servlet-class>fixedIt.servlets.PasswordUpdateServlet</servlet-class>
  </servlet>
  
  
  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>NewUserServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>UserInfoServlet</servlet-name>
    <url-pattern>/userInfo</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>DisplayScheduleServlet</servlet-name>
    <url-pattern>/schedule</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>EditUserInfoServlet</servlet-name>
    <url-pattern>/editUserInfo</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>PasswordUpdateServlet</servlet-name>
    <url-pattern>/passwordUpdate</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
